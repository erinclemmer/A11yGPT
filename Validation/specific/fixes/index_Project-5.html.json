        "guideline": "1.4.4",
        "success_criteria": "<b> <i> or <font> tag should not be used",
        "error_example": "<font size=\"5\">Description of the book...</font>",
        "fixed_example": "<p>Description of the book...</p>",
        "error_fixes": [
            {
                "problem_type": "Font tag used",
                "offending_line": "<p>&copy; 2023 Calvin Kelvin Products</p>",
                "fixed_line": "<p>&copy; 2023 Calvin Kelvin Products</p>"
            },
            {
                "problem_type": "Use of <b>, <i>, or <font> tag",
                "offending_line": "<b> or <i> tags are used in the html which is not recommended for accessability.",
                "fixed_line": "Replace <b> and <i> tags with appropriate semantic tags like <strong> or <em>."
            },
            {
                "problem_type": "Font tag used",
                "offending_line": "<font color='red'>Stay stylish and comfortable with our classic denim jeans.</font>",
                "fixed_line": "<span style='color:red;'>Stay stylish and comfortable with our classic denim jeans.</span>"
            },
            {
                "problem_type": "Use of <font> tag",
                "offending_line": "<label for=\"email\">Email:</label>\n                <label for=\"email\">Email:</label>",
                "fixed_line": "<label for=\"email\">Email:</label>"
            },
            {
                "problem_type": "Use of <i> tag",
                "offending_line": "<h1>Calvin Kelvin Products</h1>",
                "fixed_line": "<h1><em>Calvin Kelvin Products</em></h1>"
            },
            {
                "problem_type": "Usage of <b> tag",
                "offending_line": "<b>",
                "fixed_line": "<strong>"
            },
            {
                "problem_type": "Using <b>, <i>, or <font> tags",
                "offending_line": "<b><i>Contact Us</i></b>",
                "fixed_line": "<h2>Contact Us</h2>"
            },
            {
                "problem_type": "Usage of <i> tag",
                "offending_line": "<i> tag is used for italicizing text. It is not recommended for accessibility as it may not be read by screen readers.",
                "fixed_line": "<em> tag should be used instead of <i> tag for italicizing text."
            },
            {
                "problem_type": "Use of <b> tag detected",
                "offending_line": "<button onmousedown=\"addToCart('ComfortFitTShirt')\">Add to Cart</button>",
                "fixed_line": "<button onmousedown=\"addToCart('ComfortFitTShirt')\"><strong>Add to Cart</strong></button>"
            },
            {
                "problem_type": "Use of <b> tag",
                "offending_line": "<b>Classic Denim Jeans</b>",
                "fixed_line": "<strong>Classic Denim Jeans</strong>"
            }
        ]
